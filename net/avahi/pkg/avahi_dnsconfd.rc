#!/bin/sh
#
# $OpenBSD: avahi_dnsconfd.rc,v 1.5 2010/12/27 14:50:23 ajacoutot Exp $

daemon="${TRUEPREFIX}/sbin/avahi-dnsconfd"
daemon_flags="-D"

. /etc/rc.d/rc.subr

rc_check() {
	${daemon} --check
}

rc_reload() {
	${daemon} --refresh 2> /dev/null
}

rc_stop() {
	${daemon} --kill 2> /dev/null
}

rc_cmd $1
