+const char * _krb5_error_msg(int errcode) {
+
+    krb5_context ctx;
+    const char *ret = NULL;
+
+    if (!krb5_init_context(&ctx)) {
+       ret=krb5_get_err_text(ctx, errcode);
+       krb5_free_context(ctx);
+    } else {
+       ret="Error getting error message";
+    }
+    return ret;
+}
+
