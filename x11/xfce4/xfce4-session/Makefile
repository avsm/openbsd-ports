COMMENT=	Xfce4 session manager

XFCE_PROJECT=	xfce4-session
REVISION=	3

SHARED_LIBS +=	xfsm-4.6	0.0 # .0.0

# GPLv2
PERMIT_DISTFILES_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes
PERMIT_PACKAGE_CDROM=	Yes
