+DESTDIR=$(PREFIX)/lib/X11/fonts
+ 
+all:
+	@echo nothing to be done for \`$@\'
+	@echo this is an install-only port.
+ 
+install:
+	[ -d $(DESTDIR) ] || mkdir -p $(DESTDIR)
+	tar -cf - freefont |(cd ${DESTDIR}; tar -xf -)
