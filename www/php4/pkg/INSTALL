#!/bin/sh
#
# $OpenBSD: INSTALL,v 1.3 2001/07/17 22:46:45 avsm Exp $
#
# php4 installation

# exit on errors, use a sane path and install prefix
#
set -e
PATH=/bin:/usr/bin:/sbin:/usr/sbin
PREFIX=${PKG_PREFIX:-/usr/local}

do_notice()
{
    echo
    echo "+---------------"
    echo "| To finish the install, you need to enable the php4"
    echo "| module using the following command"
    echo "|"
    echo "|       $PREFIX/sbin/php4-enable"
    echo "|"
    echo "| Copy the sample file below into /var/www/conf/php.ini"
    echo "| ${PREFIX}/share/doc/php.ini-dist"
    echo "+---------------"
    echo
}

# verify proper execution
#
if [ $# -ne 2 ]; then
    echo "usage: $0 distname { PRE-INSTALL | POST-INSTALL }" >&2
    exit 1
fi

# Verify/process the command
#
case $2 in
    PRE-INSTALL)
	: nothing to pre-install for this port
	;;
    POST-INSTALL)
	do_notice $1
	;;
    *)
	echo "usage: $0 distname { PRE-INSTALL | POST-INSTALL }" >&2
	exit 1
	;;
esac

exit 0
