+static void
+set_owner(char *device, int uid, int gid, int mode)
+{
+	if (chown (device, uid, gid) < 0) {
+		if (errno != ENOENT
+		    && getuid() == 0) {
+			fprintf(stderr, "Cannot chown %s to %d,%d: %s\n",
+			    device, uid, gid, strerror(errno));
+		}
+	}
+	chmod (device, mode);
+}
 
