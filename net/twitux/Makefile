# $OpenBSD: Makefile,v 1.14 2010/11/19 22:31:39 espie Exp $

COMMENT=		Gtk-based GUI client for Twitter

GNOME_PROJECT=		twitux
GNOME_VERSION=		0.69
REVISION=		6

CATEGORIES=     	net

HOMEPAGE=		http://live.gnome.org/DanielMorales/Twitux

# GPLv2+
PERMIT_PACKAGE_CDROM=	Yes
PERMIT_PACKAGE_FTP=	Yes
PERMIT_DISTFILES_CDROM= Yes
PERMIT_DISTFILES_FTP=	Yes

MASTER_SITES=	${MASTER_SITE_SOURCEFORGE:=twitux/}
EXTRACT_SUFX=	.tar.bz2

WANTLIB += ORBit-2 X11 Xau Xcomposite Xcursor Xdamage Xdmcp Xext
WANTLIB += Xfixes Xi Xinerama Xrandr Xrender atk-1.0 c cairo dbus-1
WANTLIB += dbus-glib-1 expat fontconfig freetype gcrypt gdk-x11-2.0
WANTLIB += gdk_pixbuf-2.0 gio-2.0 glib-2.0 gmodule-2.0 gnutls
WANTLIB += gobject-2.0 gpg-error gthread-2.0 gtk-x11-2.0 ltdl
WANTLIB += m ogg pango-1.0 pangocairo-1.0 pangoft2-1.0 pcre pixman-1
WANTLIB += png pthread pthread-stubs stdc++ tasn1 vorbis vorbisfile
WANTLIB += xcb xml2 z xcb-render xcb-render-util
WANTLIB += soup-2.4 sexy gnome-keyring>=6 notify canberra canberra-gtk
WANTLIB += enchant

BUILD_DEPENDS=	devel/iso-codes

LIB_DEPENDS=	devel/libsoup \
		x11/libsexy \
		x11/gnome/libgnome-keyring \
		devel/libnotify \
		audio/libcanberra \
		textproc/enchant

MODULES=	devel/gconf2 \
		devel/gettext \
		x11/gnome

MODGCONF2_SCHEMAS_DIR=	twitux

MODGNOME_HELP_FILES=	Yes

CONFIGURE_STYLE= gnu
CONFIGURE_ARGS=	${CONFIGURE_SHARED} \
		--enable-dbus=yes \
		--enable-gnome-keyring=yes \
		--enable-spell=yes
CONFIGURE_ENV=	CPPFLAGS="-I${LOCALBASE}/include" \
		LDFLAGS="-L${LOCALBASE}/lib"

DESKTOP_FILES=	Yes

.include <bsd.port.mk>
