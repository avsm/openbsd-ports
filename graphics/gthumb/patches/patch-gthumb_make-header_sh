+++ gthumb/make-header.sh	Sat Oct  2 12:00:11 2010
@@ -3,9 +3,10 @@
 template="$1"
 
 shift
-includes="\n"
+includes="\\\\n"
 for i in "$@"; do
-	includes="${includes}#include <gthumb/"$i">\n"
+        includes="${includes}#include <gthumb/"$i">\\\\n"
 done
 
-sed -e 's|@@|'"$includes"'|' $template
+sed -e 's|@@|'"$includes"'|' -e 's|\\n|\
+|g' $template
