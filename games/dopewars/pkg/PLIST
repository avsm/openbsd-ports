@group games
@mode 2755
bin/dopewars
@exec touch /var/games/dopewars.sco
@exec chown root.games /var/games/dopewars.sco
@exec chmod 664 /var/games/dopewars.sco
@unexec echo "+---------------"
@unexec echo "| Please remove the score-file /var/games/dopewars.sco"
@unexec echo "| to fully un-install dopewars."
@unexec echo "+---------------"
