+
+int
+init_pwent_cache()
+{
+  struct passwd *pwent;
+  pwent = getpwuid(getuid());
+  if (pwent == NULL) {
+    return 0;
+  }
+  else {
+    __pw_name = strdup(pwent->pw_name);
+    __pw_uid  = pwent->pw_uid;
+  }
+  return 1;
+}
