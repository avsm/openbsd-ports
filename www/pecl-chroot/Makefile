SHARED_ONLY=	Yes

COMMENT=	PHP support for chroot(2)
DISTNAME=	pecl-chroot-1.0
REVISION=	0
MASTER_SITES=	${MASTER_SITE_BACKUP}
CATEGORIES=	www

# PHP License
PERMIT_PACKAGE_CDROM=	Yes
