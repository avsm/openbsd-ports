DISTNAME	=	audiofile-0.1.6
PKGNAME		=	lib${DISTNAME}
CATEGORIES	=	audio

MAINTAINER	=	rohee@OpenBSD.ORG

MASTER_SITES	=	${MASTER_SITE_GNOME}
MASTER_SITE_SUBDIR=     gnome-1.0/sources

NEED_VERSION	=	1.78

GNU_CONFIGURE	=	yes

CONFIGURE_ARGS	+=	${CONFIGURE_SHARED}

post-install:
	${LDCONFIG} -m ${PREFIX}/lib

.include <bsd.port.mk>
