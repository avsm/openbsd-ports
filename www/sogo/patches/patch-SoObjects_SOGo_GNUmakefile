-SOGo_INSTALL_DIR = $(SOGO_LIBDIR)
+SOGo_INSTALL_DIR = $(SOGO_FRAMEWORKDIR)
 
 SOGo_VERSION=$(MAJOR_VERSION).$(MINOR_VERSION)
+SOGo_INTERFACE_VERSION=$(MAJOR_VERSION).$(MINOR_VERSION)
 
