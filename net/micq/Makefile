DISTNAME=       micq-0.4.5
CATEGORIES=	net
MASTER_SITES=   ftp://micq.chatzone.org/pub/micq/V0.4.5/
EXTRACT_SUFX=	.tgz

MAINTAINER=	form@openbsd.org

LICENSE_TYPE=		NONE
PERMIT_PACKAGE_CDROM=	YES
PERMIT_PACKAGE_FTP=	YES
PERMIT_DISTFILES_CDROM=	YES
PERMIT_DISTFILES_FTP=	YES

NO_CONFIGURE=	Yes
FAKE=		Yes

WRKDIST=	${WRKDIR}/micq-0.4.4

