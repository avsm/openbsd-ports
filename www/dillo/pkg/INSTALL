#!/bin/sh
# $OpenBSD: INSTALL,v 1.2 2004/07/06 16:14:21 xsa Exp $
#
# post-installation setup of dillo

PATH=/bin:/usr/bin:/sbin:/usr/sbin
PREFIX=${PKG_PREFIX:-/usr/local}
CONFIG_DIR=${SYSCONFDIR}
SAMPLE_CONFIG_DIR=$PREFIX/share/examples/dillo
SAMPLE_FILES="dillorc dpidrc"

do_notice()
{
  echo
  echo "+---------------"
  echo "| The existing $1 configuration file in $CONFIG_DIR has NOT"
  echo "| been changed.  You may want to compare it to the current sample in"
  echo "| $SAMPLE_CONFIG_DIR, and update your configuration"
  echo "| file as needed."
  echo "+---------------"
  echo
}

do_install()
{
  install -o root -g wheel -m 644 $SAMPLE_CONFIG_DIR/$1 $CONFIG_DIR
  echo
  echo "+---------------"
  echo "| The $1 configuration file has been installed in $CONFIG_DIR."
  echo "| Please view this file and change the configuration to"
  echo "| meet your needs."
  echo "+---------------"
  echo
}

# verify proper execution
#
if [ $# -ne 2 ]; then
    echo "usage: $0 distname { PRE-INSTALL | POST-INSTALL }" >&2
    exit 1
fi

# Verify/process the command
#
case $2 in
    PRE-INSTALL)
	;;
    POST-INSTALL)
	for f in $SAMPLE_FILES; do
		if [ ! -f "$CONFIG_DIR/$f" ]; then
		   do_install $f
		else
		   do_notice $f
		fi
	done
	;;
    *)
	echo "usage: $0 distname { PRE-INSTALL | POST-INSTALL }" >&2
	exit 1
	;;
esac

exit 0
