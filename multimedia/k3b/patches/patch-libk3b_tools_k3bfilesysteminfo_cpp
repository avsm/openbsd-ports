   void stat() {
     struct statfs fs;
     if( !::statfs( QFile::encodeName( QFileInfo(path).dirPath( true ) ), &fs ) ) {
+#ifdef Q_OS_OPENBSD
+      if(strncmp(fs.f_fstypename, MOUNT_MSDOS, MFSNAMELEN) == 0)
+	type = FS_FAT;
+      else
+	type = FS_UNKNOWN;
+#else
       switch( fs.f_type ) {
       case 0x4d44: // MS-DOS
 	type = FS_FAT;
       default:
 	type = FS_UNKNOWN;
       }
+#endif
 
       statDone = true;
     }
