+#if defined(__OpenBSD__)
+static unsigned long
+orc_check_altivec_sysctl_openbsd (void)
+{
+  unsigned long cpu_flags = 0;
+  int mib[2], ret, vu;
+  size_t len;
+
+  mib[0] = CTL_MACHDEP;
+  mib[1] = CPU_ALTIVEC;
+
+  len = sizeof(vu);
+  ret = sysctl(mib, 2, &vu, &len, NULL, 0);
+  if (!ret && vu) {
+    cpu_flags |= ORC_TARGET_ALTIVEC_ALTIVEC;
+  }
+
+  return cpu_flags;
+}
+#endif
+
 #if defined(__linux__)
