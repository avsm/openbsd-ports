if [ -f "$1" ] 
then
	case `${CIPHER} <$1` in
	${CKSUM}) 
		echo "Ok: $1"
		exit 0;;
	*) 
		echo "Bad checksum: $1" 
		exit 1;;
	esac
fi
echo "Missing: $1"
exit 1
