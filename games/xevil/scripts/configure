#!/bin/sh

cd $WRKSRC || exit 1

cat >> Makefile << END

all: freebsd

install:
	cp xevil \$(PREFIX)/bin
	mkdir -p \$(PREFIX)/lib/app-defaults
	for f in iris mac sun3 sun4_sparc; do \
	  cp app-defaults/XEvil.\$\$f \$(PREFIX)/lib/app-defaults/; done
	gzip -9 <xevil.6 >\$(PREFIX)/man/man6/xevil.6.gz

END

exit 0
