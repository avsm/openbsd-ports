+static inline int float_to_int48_44 (float * _f, int16_t * s16, int flags)
+{
+  int i;
+  int32_t * f = (int32_t *) _f;
+
+    for (i = 0; i < 235; i++) {
+	s16[2*i] = convert (f[tr[i]]);
+	s16[2*i+1] = convert (f[tr[i]+256]);
+    }
+    return i;
+}
