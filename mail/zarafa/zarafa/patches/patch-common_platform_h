   // We have to include this now in case select.h is included too soon.
   // Increase our maximum amount of file descriptors to 8192
+#if OPENBSD
+  #include <sys/types.h>
+  #undef FD_SETSIZE
+  #define FD_SETSIZE 1024
+#else
   #include <bits/types.h>
   #undef __FD_SETSIZE
   #define __FD_SETSIZE 8192
+#endif
 
