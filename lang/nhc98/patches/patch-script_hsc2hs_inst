-MACHINE=${MACHINE-"`$SCRIPTDIR/harch`"}
+MACHINE=OpenBSD
 export MACHINE EXEDIR SCRIPTDIR
 
 if [ ! -d $EXEDIR/$MACHINE ]
@@ -17,7 +17,7 @@ fi
 # (Flags are sourced from machine-specific configuration)
 . $EXEDIR/$MACHINE/config
 
