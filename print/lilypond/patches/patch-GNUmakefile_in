 install-WWW:
 	-$(INSTALL) -m 755 -d $(DESTDIR)$(webdir)
 	rsync -rl --exclude='*.signature' $(outdir)/offline-root/ $(DESTDIR)$(webdir)
+	pax -rw -s "@^$(outdir)/offline-root@@" -s "@.*\.signature@@" \
+		$(outdir)/offline-root $(DESTDIR)$(webdir)
 
 install-info-WWW:
