 ifeq ($(LEGACY_FFI),no)
 	$(GREP) -v -e CError -e CForeign -e CString\
 		   -e ForeignPtr -e MarshalAlloc -e MarshalArray\
-		   -e MarshalError -e MarshalUtils -e "\<Ptr" .depend\
+		   -e MarshalError -e MarshalUtils -e "[[:<:]]Ptr" .depend\
 		   >.depend.new
 	$(MV) .depend.new .depend
