     $conf->data->set( ccflags => $ccflags );
 
     my $libs = $conf->data->get('libs');
+
+=for comment
+
     if ( $libs !~ /-lpthread/ ) {
         $libs .= ' -lpthread';
     }
+
+=cut
+
     $conf->data->set(
         libs  => $libs,
         link  => 'g++',
