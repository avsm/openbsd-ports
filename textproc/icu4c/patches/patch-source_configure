    { (exit 1); exit 1; }; }
     fi
 fi
+ENTRYPOINT_VERSION=`echo $VERSION | sed -e 's/\.//'`
 LIB_VERSION=`echo $VERSION | sed -e 's/\.//' -e 's/^\([^.]*\)$/\1.0/'`
 LIB_VERSION_MAJOR=`echo $LIB_VERSION | sed 's/\..*//'`
 
