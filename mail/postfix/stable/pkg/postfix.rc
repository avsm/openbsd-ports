#!/bin/sh
#
# $OpenBSD: postfix.rc,v 1.1 2011/07/15 18:10:19 robert Exp $

daemon="${TRUEPREFIX}/libexec/postfix/master"

. /etc/rc.d/rc.subr

pexp="${daemon}"

rc_pre() {
	[ ! -f /etc/mailer.conf.postfix ]
}

rc_start() {
	${TRUEPREFIX}/sbin/postfix ${daemon_flags} start
}

rc_stop() {
	${TRUEPREFIX}/sbin/postfix stop
}

rc_cmd $1
