#!/bin/sh
#
# $OpenBSD: nginx.rc,v 1.3 2010/12/11 08:05:38 ajacoutot Exp $

. /etc/rc.d/rc.subr

daemon="${TRUEPREFIX}/sbin/nginx"
pexp="nginx:.*master.*process"

rc_reload() {
	${daemon} -s reload >/dev/null
}

rc_stop() {
	${daemon} -s stop >/dev/null
	[ $? -gt 0 ] && pkill -f "^${pexp}"
}

rc_cmd $1
