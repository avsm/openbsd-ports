# $OpenBSD: Makefile,v 1.28 2010/11/12 16:26:01 ajacoutot Exp $

COMMENT=	digital camera frontend

DISTNAME=	gtkam-0.1.16.1
REVISION=	5

CATEGORIES=	graphics

HOMEPAGE=	http://gphoto.sourceforge.net/proj/gtkam/

# GPLv2
PERMIT_PACKAGE_CDROM=	Yes
PERMIT_PACKAGE_FTP=	Yes
PERMIT_DISTFILES_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes

WANTLIB=	gmodule-2.0 X11 Xext Xrender gobject-2.0 png \
		atk-1.0 fontconfig freetype m c z cairo glib-2.0 pcre \
		pango-1.0 pangocairo-1.0 pangoft2-1.0 Xau Xcursor \
		Xdmcp Xfixes Xi Xinerama Xrandr exif expat ltdl usb \
		Xcomposite Xdamage pixman-1 pthread gio-2.0 \
		pthread-stubs xcb gdk_pixbuf-2.0 gphoto2 gphoto2_port \
		gdk-x11-2.0.>=0.11 gtk-x11-2.0.>=0.11 exif-gtk

MASTER_SITES=	${MASTER_SITE_SOURCEFORGE:=gphoto/}

LIB_DEPENDS=	::graphics/libgphoto2 \
		::x11/gtk+2 \
		::graphics/libexif-gtk
RUN_DEPENDS=	:desktop-file-utils-*:devel/desktop-file-utils

MODULES=	devel/gettext \
		textproc/intltool

USE_LIBTOOL=	Yes
USE_GROFF =	Yes

CONFIGURE_STYLE=gnu
CONFIGURE_ENV=	CPPFLAGS="-I${LOCALBASE}/include" \
		LDFLAGS="-L${LOCALBASE}/lib -pthread"
CONFIGURE_ARGS=	${CONFIGURE_SHARED} \
		--with-gnome=no \
		--with-gimp=no \
		--with-bonobo=no \
		--disable-scrollkeeper

.include <bsd.port.mk>
