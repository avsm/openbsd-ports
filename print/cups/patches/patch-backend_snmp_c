     char          *string,		/* I  - String buffer */
     int           strsize)		/* I  - String buffer size */
 {
-  if (length < strsize)
+  if (length < 0)
   {
-    memcpy(string, *buffer, length);
-    string[length] = '\0';
+   /*
+    * Disallow negative lengths!
+    */
