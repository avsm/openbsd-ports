# $OpenBSD: Makefile,v 1.10 2000/03/05 18:30:34 espie Exp $

DISTNAME=       nte-1.7.0
CATEGORIES=	mbone
NEED_VERSION=	1.223
MASTER_SITES=   http://www-mice.cs.ucl.ac.uk/multimedia/software/nte/1.7.0/

MAINTAINER=	angelos@openbsd.org

LICENSE_TYPE=		BSD
PERMIT_PACKAGE_CDROM=	Yes
PERMIT_PACKAGE_FTP=	Yes
PERMIT_DISTFILES_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes

BUILD_DEPENDS=	${PREFIX}/lib/libcommon.a:mbone/common
LIB_DEPENDS=	tcl80.1.5:lang/tcl80 \
		tk80.1.5:x11/tk80

USE_GMAKE=	Yes
HAS_CONFIGURE=	Yes

WRKDIST=		${WRKDIR}/nte

post-extract:
	@cp ${FILESDIR}/Makefile.work ${WRKSRC}/Makefile
	@cp ${FILESDIR}/configure ${WRKSRC}
	@${CHMOD} 755 ${WRKSRC}/configure

do-install:
	${INSTALL_PROGRAM} ${WRKSRC}/linux/nte ${PREFIX}/bin

.include <bsd.port.mk>
