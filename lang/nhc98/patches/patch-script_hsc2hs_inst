+HSC2HSOPTS="--cc=$CC --ld=$CC --cflag=-D__NHC__=$VERSIONNUM -I$INCDIR"
 if test $USINGRTS -eq 0 ; then
   HSC2HSOPTS="- $HSC2HSOPTS"
