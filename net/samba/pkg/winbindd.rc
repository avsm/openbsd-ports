#!/bin/sh
#
# $OpenBSD: winbindd.rc,v 1.2 2011/03/09 19:37:47 ajacoutot Exp $

daemon="/usr/local/libexec/winbindd"
daemon_flags="-D"

. /etc/rc.d/rc.subr

smbcontrol="${TRUEPREFIX}/bin/smbcontrol"

rc_check() {
	${smbcontrol} winbindd ping 2>/dev/null
}

rc_reload() {
	${smbcontrol} winbindd reload-config
}

rc_stop() {
	${smbcontrol} winbindd shutdown 2>/dev/null
}

rc_cmd $1
