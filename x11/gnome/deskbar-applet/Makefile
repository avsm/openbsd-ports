# $OpenBSD: Makefile,v 1.2 2008/05/25 19:16:22 ajacoutot Exp $

COMMENT=		universal search and navigation for GNOME

GNOME_VERSION=		2.20.3
GNOME_PROJECT=		deskbar-applet
PKGNAME=		${DISTNAME}p0
CATEGORIES=		sysutils

HOMEPAGE=		http://raphael.slinckx.net/deskbar/

# GPLv2
PERMIT_PACKAGE_CDROM=	Yes
PERMIT_PACKAGE_FTP=	Yes
PERMIT_DISTFILES_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes

MODULES=		devel/gettext \
			lang/python \
			x11/gnome

WANTLIB=	ICE ORBit-2 ORBitCosNaming-2 SM X11 Xau Xcomposite \
		Xcursor Xdamage Xdmcp Xext Xfixes Xi Xinerama Xrandr \
		Xrender art_lgpl_2 asn1 atk-1.0 audiofile bonobo-2 \
		bonobo-activation bonoboui-2 cairo com_err crypto db \
		dbus-1 dbus-glib-1 esd expat fontconfig freetype gailutil \
		gconf-2 gdk-x11-2.0 gdk_pixbuf-2.0 glib-2.0 glitz gmodule-2.0 \
		gnome-2 gnome-desktop-2 gnome-keyring gnomecanvas-2 \
		gnomeui-2 gnomevfs-2 gobject-2.0 gssapi gthread-2.0 \
		gtk-x11-2.0 jpeg krb5 m nspr4 nss3 pango-1.0 pangocairo-1.0 \
		pangoft2-1.0 pcre plc4 plds4 png popt pthread smime3 \
		softokn3 ssl ssl3 startup-notification-1 util xml2 z

BUILD_DEPENDS=		::x11/dbus-python \
			::x11/gnome/doc-utils \
			::x11/gnome/py-gnome-desktop
RUN_DEPENDS=		::lang/python/${MODPY_VERSION},-bz2 \
			::mail/evolution \
			::x11/dbus-python \
			::x11/gnome/py-gnome-desktop
LIB_DEPENDS=		camel-1.2,ebook-1.2,edataserver-1.2::databases/evolution-data-server

MODGNOME_HELP_FILES=	Yes
MODGNOME_DEVHELP_FILES=	Yes

CONFIGURE_ARGS+=	--with-gconf-schema-file-dir=${LOCALBASE}/share/schemas/deskbar-applet \
			--disable-schemas-install \
			--enable-evolution
CONFIGURE_ENV=		CPPFLAGS="-I${LOCALBASE}/include" \
			LDFLAGS="-L${LOCALBASE}/lib" \
			PYTHON="${MODPY_BIN}"

SUBST_VARS=		MODPY_BIN

pre-configure:
	${SUBST_CMD} ${WRKSRC}/deskbar/deskbar-applet.py

post-patch:
			@ln -s /usr/bin/true ${WRKDIR}/bin/scrollkeeper-update

.include <bsd.port.mk>
