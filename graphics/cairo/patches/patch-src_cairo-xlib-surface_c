+static void _print_Visual(Visual *v) {
+    if(v)
+	fprintf(stderr,
+		"  Visual: %p\n"
+		"    class: %s\n"
+		"    bpRGB: %i\n"
+		"    map_entries: %i\n"
+		"    RGB masks: %08lx %08lx %08lx\n",
+		v,
+		_visualClass[v->class],
+		v->bits_per_rgb,
+		v->map_entries,
+		v->red_mask, v->green_mask, v->blue_mask);
+    else
+	fprintf(stderr, "  Visual: NULL\n");
+}
