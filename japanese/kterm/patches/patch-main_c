 get_pty (pty)
     int *pty;
 {
+#ifdef __OpenBSD__
+	int result;
+	static int m_tty = -1;
+	static int m_pty = -1;
+	struct group *ttygrp;
+
+	if (pty == NULL) {
+		result = openpty(&m_pty, &m_tty, ttydev, NULL, NULL);
+
+		seteuid(0);
+		if ((ttygrp = getgrnam(TTY_GROUP_NAME)) != 0) {
+			set_owner(ttydev, getuid(), ttygrp->gr_gid,
+			    0600);
+		} else {
+			set_owner(ttydev, getuid(), getgid(),
+			    0600);
+		}
+		seteuid(getuid());
+		return result;
+	} else if (m_pty != -1) {
+		*pty = m_pty;
+		return (0);
+	} else {
+		return (-1);
+	}
+#endif /* __OpenBSD__ */
