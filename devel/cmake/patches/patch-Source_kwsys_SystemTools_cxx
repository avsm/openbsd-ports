+#include <sys/stat.h>
 #include <fcntl.h>
 #include <unistd.h>
 inline int Mkdir(const char* dir)
 {
-  return mkdir(dir, 00777);
+  struct stat sb;
+  return stat(dir, &sb) && mkdir(dir, 00777);
 }
