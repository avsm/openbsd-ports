+      p = direntry->dirname;
+      while (*p != '\0') {
+        *p = *(p + 1);
+        p++;
+      }
+      *p = *(p+1); /* move last null */
+      //printf("zoo: skipped \"/\" path component in '%s'\n", direntry->dirname);
+   }
+   /* take off '..'   */
+   if(!strcmp(direntry->dirname, ".."))
+      direntry->dirname[0] = '\0';
