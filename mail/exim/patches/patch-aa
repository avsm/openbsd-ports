+# If info directory doesn't exist, try to create it
+
+if [ ! -d ${INFO_DIRECTORY} ]; then
+  echo mkdir -p ${INFO_DIRECTORY}
+  ${real} mkdir -p ${INFO_DIRECTORY}
+  if [ $? -ne 0 ]; then
+    echo $com ""
+    echo $com "**** Exim installation ${ver}failed ****"
