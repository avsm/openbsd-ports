+static int set_gre_sysctl(int value)
+{
+    int mib[4];
+
+    /* "net.inet.gre.allow" */
+    mib[0] = CTL_NET;
+    mib[1] = PF_INET;
+    mib[2] = IPPROTO_GRE;
+    mib[3] = GRECTL_ALLOW;
+    
+    if (sysctl(mib, 4, NULL, 0, &value, sizeof(value)) == -1)
+        return 0;
+    return 1;
+}
+
 /*** Open IP protocol socket **************************************************/
