  pushback(c)
  char c;
  {
! #ifndef SYSV
  	if (ioctl(0, TIOCSTI, &c) < 0)
  		perror("TIOCSTI ioctl failed");
! #else /* SYSV */
  	if (ungetc(c,stdin) == EOF)
  		perror("ungetc() failed");
! #endif /* SYSV */
  }
  
  
