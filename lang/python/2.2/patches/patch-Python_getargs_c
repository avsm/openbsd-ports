--- Python/getargs.c.orig	2001-12-03 01:43:33.000000000 +0100
+++ Python/getargs.c	2003-12-29 21:50:32.000000000 +0100
@@ -61,8 +61,12 @@ PyArg_VaParse(PyObject *args, char *form
 #ifdef VA_LIST_IS_ARRAY
 	memcpy(lva, va, sizeof(va_list));
 #else
+#ifdef __va_copy
+	__va_copy(lva, va);
+#else
 	lva = va;
 #endif
+#endif
 
 	return vgetargs1(args, format, &lva, 0);
 }
