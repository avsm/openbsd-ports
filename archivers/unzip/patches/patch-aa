--- 661,672 ----
  # FreeBSD on Intel:
  freebsd:		unix_make
  	@echo 'NOTE:  use bsd target for non-Intel FreeBSD compiles (if any).'
+ 	$(MAKE) unzips CC=gcc LD=gcc AS=gcc\
+ 	 CF="-O3 -Wall -I. -DASM_CRC -DBSD $(LOC)"\
+ 	 AF="-Di386 $(AF)" CRC32=crc_gcc
+ 
+ # OpenBSD
+ openbsd:		unix_make
  	$(MAKE) unzips CC=gcc LD=gcc AS=gcc\
  	 CF="-O3 -Wall -I. -DASM_CRC -DBSD $(LOC)"\
  	 AF="-Di386 $(AF)" CRC32=crc_gcc
