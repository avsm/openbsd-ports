  */gcc|gcc) case `$CC -v` in
  	   "gcc version 2.8"*) : ${OPT=};;
  	   esac;;
!        *) : ${OPT="${CFLAGS:-'-O'}"};;
  esac
  
  : ${CC='gcc $(WARN)'} ${OPT='-O'} ${DEBUG='-g'}
